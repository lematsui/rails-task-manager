<div class="container flexbox">
  <div class="form">
    <%= form_for(@task) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>

      <%= f.label :details %>
      <%= f.text_area :details, class: "form-control", rows: 3 %>

      <%= f.submit value: "Create task!" %>
    <% end %>
  </div>
</div>
