<div class="container">
  <div class="title-and-edit">
    <h1><%= @task.title %></h1>
    <%= link_to "Edit this task", edit_path %>
  </div>
  <h2><%= @task.details %></h2>
  <% message = "This task is not completed yet" %>
  <% message = "This task is completed" if @task.completed == true %>
  <% checked = "checked" if @task.completed %>
  <input type="checkbox" <%= "#{checked}" %> disabled ><%= "#{message}" %><br>
  <%= link_to "Back to tasks", tasks_path %>
</div>
