<h1 class="text-center">Edit task</h1>
<div class="flexbox">
  <div class="form">
    <%= form_for(@task) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>

      <%= f.label :details %>
      <%= f.text_area :details, class: "form-control", rows: 3 %>

      <%= f.label :completed %>
      <%= f.check_box :completed %>

      <%= f.submit "Edit task!", class: "form-control", style: "width: 100px" %>
    <% end %>
  </div>
</div>

